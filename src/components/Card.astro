---
import { Image } from "astro:assets";

type CardProps = {
    imagePath: string;
    name: string;
    description: string;
}
const { imagePath, name, description } = Astro.props;
---

<div class="relative h-full">
    <div class="absolute w-full h-full bg-black border-black translate-x-1 translate-y-1 rounded-md"></div>
    <div
    class="h-full relative flex flex-col justify-center items-center bg-brand-pink text-black border-4 border-black shadow-lg rounded-md"
    data-v0-t="card"
    >
    <div class="flex flex-col space-y-1.5 p-6">
        <Image
        src={imagePath}
        width="200"
        height="200"
        alt="Bandana"
        class="mx-auto aspect-[1/1] overflow-hidden shadow-lg"
        />
    </div>
    <div class="p-6 h-full">
        <h3 class="text-2xl font-extrabold text-black">{name}</h3>
        <p class="text-md text-black font-medium">
            {description}
        </p>
    </div>
    <div class="relative flex justify-center w-fit mb-4">
            <div class="absolute h-full w-full bg-black border-black translate-x-1 translate-y-1 rounded-md" />
            <a
                class="relative inline-flex h-10 items-center justify-center rounded-md bg-[#FFD700] px-8 text-lg font-medium text-black shadow-lg border-2 border-black transition-colors hover:bg-[#FFC0CB] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black disabled:pointer-events-none disabled:opacity-50"
                href="#"
            >
                SEE OPTIONS
            </a>
        </div>
    </div>
    
</div>
