---
import { Image } from "astro:assets";
import Piper from "../assets/PIPER.png";
import sparkles from "../assets/sparkles.png";
import bone from "../assets/bone.png";
import nametag from "../assets/nametag.png";
---

<script type="module">
    import { gsap } from "https://cdn.skypack.dev/gsap";
    import { ScrollTrigger } from "https://cdn.skypack.dev/gsap/ScrollTrigger";

    window.addEventListener('load', () => {
        gsap.registerPlugin(ScrollTrigger);

        gsap.to("#parallax", {
            yPercent: -30,
            ease: "none",
            scrollTrigger: {
                trigger: "#parallax",
                // start: "top bottom", // the default values
                // end: "bottom top",
                scrub: true
            }, 
        });

        gsap.to("#parallax2", {
            yPercent: -25,
            ease: "none",
            scrollTrigger: {
                trigger: "#parallax",
                // start: "top bottom", // the default values
                // end: "bottom top",
                scrub: true
            }, 
        });

        gsap.to("#parallax3", {
            yPercent: -45,
            ease: "none",
            scrollTrigger: {
                trigger: "#parallax",
                // start: "top bottom", // the default values
                // end: "bottom top",
                scrub: true
            }, 
        });
    });
</script>

<section class="w-full bg-brand-pink">
    <div class="flex flex-col lg:flex-row h-full">
        <div class="relative flex flex-col justify-center w-full border-b-2 lg:border-r-2 lg:border-b-0 border-black bg-brand-yellow p-12 text-center">
            <div class="w-fit mx-auto">
                <div>
                    <h1 class="lg:leading-tighter text-5xl font-medium sm:text-6xl md:text-7xl xl:text-[4.5rem] 2xl:text-[5rem] text-black">
                    Stylish Bandanas for Your Furry Best Friend
                    </h1>
                </div>
                <div class="flex flex-col items-center space-y-4">
                    <p class="mx-auto max-w-[700px] text-black md:text-2xl dark:text-black my-4">
                        Discover our collection of stylish and durable bandanas for dogs. Make your furry friend the talk of
                        the park.
                    </p>
                    <div class="relative flex justify-center w-full lg:w-fit">
                        <div class="hidden absolute h-full w-full bg-black border-black translate-x-1 translate-y-1 rounded-md" />
                        <a
                            class="relative flex w-full py-4 items-center justify-center rounded bg-black px-8 text-lg font-medium text-white border-2 border-black transition-colors hover:bg-[#FFC0CB] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black disabled:pointer-events-none disabled:opacity-50"
                            href="/shop"
                        >
                            Shop Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="relative w-full my-auto h-full flex flex-grow justify-center items-center p-12 bg-brand-pink">
            <div class="relative">
                <Image
                fetchpriority="high"
                alt="Dog wearing bandana"
                class="relative my-auto overflow-hidden lg:max-w-lg"
                src={Piper}
                loading="eager"
                width="512"
                height="406"
                decoding="async"
            />
            <div class="absolute top-0 -right-4 w-20 md:w-32 overflow-hidden lg:max-w-lg" id="parallax">
                <Image
                    fetchpriority="high"
                    alt="sparkles graphic"
                    class="w-full h-auto"
                    src={sparkles}
                    loading="eager"
                    decoding="async"
                />
            </div>
            <div class="absolute -bottom-8 -left-10 w-52 md:w-72 my-auto overflow-hidden lg:max-w-lg" id="parallax2">
                <Image
                    fetchpriority="high"
                    alt="bone graphic"
                    class="w-full h-auto"
                    src={bone}
                    loading="eager"
                    decoding="async"
                />
            </div>
            <div class="absolute bottom-8 -right-4 my-auto w-32 md:w-48 overflow-hidden lg:max-w-lg" id="parallax3">
                <Image
                    fetchpriority="high"
                    alt="Piper nametag graphic"
                    class="w-full h-auto"
                    src={nametag}
                    loading="eager"
                    decoding="async"
                />
            </div>
            </div>
        </div>
    </div>
</section>
